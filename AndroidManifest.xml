<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wangby.www.lfsys_android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.HomeActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".Activity.SearchActivity" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.PersonalActivity" />
        <activity android:name=".Activity.IssueActivity" />
        <activity android:name=".Activity.GoodsActivity" />
        <activity android:name=".Activity.MessageActivity" />
        <activity android:name=".Activity.ClueActivity" />
        <activity android:name=".Activity.textActivity" />
        <activity
            android:name=".Activity.MyGoodsActivity"
            android:label="@string/title_activity_my_goods"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>