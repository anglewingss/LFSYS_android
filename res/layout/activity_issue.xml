<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rr_root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff8f8f8">


    <TextView
        android:id="@+id/tv_send_invite"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_alignParentBottom="true"
        android:background="#ffff552e"
        android:gravity="center"
        android:text="发布"
        android:textColor="@color/white"
        android:textSize="55px" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:background="#ffff552e"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/back_righ"/>

            <TextView
                android:layout_width="268dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#ffffffff"
                android:text="发布"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55.0dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="推送人数"
                android:textColor="#ff424242"
                android:textSize="40px" />

            <EditText
                android:id="@+id/et_invite_counts"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="#00000000"
                android:gravity="center|right"
                android:hint="输入推送人数"
                android:inputType="number"
                android:maxLength="4"
                android:singleLine="true"
                android:text=""
                android:textColor="#ff555555"
                android:textColorHint="#ffaaaaaa"
                android:textSize="40px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_choose_sex"
            android:layout_width="fill_parent"
            android:layout_height="55.0dip"
            android:layout_marginTop="8.0dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="性别要求"
                android:textColor="#ff424242"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="#00000000"
                android:gravity="center|right"
                android:text="不限"
                android:textColor="#ff555555"
                android:textSize="40px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:src="@drawable/pt_invite_right_icon" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15.0dip"
            android:background="#fff3f3f3" />

        <LinearLayout
            android:id="@+id/ll_choose_age"
            android:layout_width="fill_parent"
            android:layout_height="55.0dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="年龄要求"
                android:textColor="#ff424242"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="#00000000"
                android:gravity="center|right"
                android:text="不限"
                android:textColor="#ff555555"
                android:textSize="40px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:src="@drawable/pt_invite_right_icon" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15.0dip"
            android:background="#fff3f3f3" />

        <LinearLayout
            android:id="@+id/ll_update_time"
            android:layout_width="fill_parent"
            android:layout_height="55.0dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="更新时间"
                android:textColor="#ff424242"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_update_time"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="#00000000"
                android:gravity="center|right"
                android:text="不限"
                android:textColor="#ff555555"
                android:textSize="40px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:src="@drawable/pt_invite_right_icon" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>