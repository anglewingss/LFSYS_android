<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_goods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wangby.www.lfsys_android.Activity.GoodsActivity">


    <LinearLayout
        android:id="@+id/top"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:onClick="breakp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back_righ"/>

        <TextView
            android:layout_width="268dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#ffffffff"
            android:text="物品详细"/>
        <TextView
            android:id="@+id/cc"
            android:onClick="clue"
            android:gravity="center"
            android:text="提供\n线索"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="230dp"
                android:background="#f4f4f6"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">

                <ImageView
                    android:id="@+id/goods_img"
                    android:scaleType="fitEnd"
                    android:src="@drawable/noimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15.0dip"
                android:background="#666" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55.0dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="物品名称"
                    android:textColor="#ff424242"
                    android:textSize="45px" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/goods_name"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:textSize="45px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="15.0dip"
                android:background="#555" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55.0dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">

                <TextView
                    android:id="@+id/times"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="丢失时间"
                    android:textColor="#ff424242"
                    android:textSize="45px" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/goods_time"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:textSize="45px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="15.0dip"
                android:background="#555" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55.0dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="地 点"
                    android:textColor="#ff424242"
                    android:textSize="45px" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/goods_place"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:textSize="45px" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="15.0dip"
                android:background="#555" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55.0dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="特 征"
                    android:textColor="#ff424242"
                    android:textSize="45px" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/goods_decp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:textSize="45px" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="15.0dip"
                android:background="#555" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="165.0dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="详细信息"
                    android:textColor="#ff424242"
                    android:textSize="45px" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/goods_datail"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:textSize="45px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="15.0dip"
                android:background="#555" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="165.0dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="备 注"
                    android:textColor="#ff424242"
                    android:textSize="45px" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/goods_remark"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:textSize="45px" />
            </LinearLayout>











            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15.0dip"
                android:background="#666" />
            <TextView
                android:id="@+id/xiansuo_text"
                android:layout_width="match_parent"
                android:text="线索"
                android:layout_height="40dp" />














            </LinearLayout>



        </ScrollView>

    <ListView
        android:id="@+id/good_list_xiansuo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>


</LinearLayout>
