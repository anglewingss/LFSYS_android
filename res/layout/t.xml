<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ManagerMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff6f6f6"
    android:orientation="vertical"
    android:paddingBottom="5.0dip">

    <RelativeLayout
        android:id="@+id/personal_user_layout"
        android:layout_width="fill_parent"
        android:layout_height="131.0dip"
        android:background="#ffff552e">

        <RelativeLayout
            android:id="@+id/personal_head_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10.0dip"
            android:background="@null">

            <RelativeLayout
                android:id="@+id/personal_head_image_layout"
                android:layout_width="57.0dip"
                android:layout_height="57.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="10.0dip"
                android:background="@drawable/personal_head_bg">

                <ImageView
                    android:id="@+id/personal_head_image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="3.0dip"
                    android:src="@drawable/personal_head"
                    android:border_color="@color/white"
                    android:border_width="3.0dip" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/personal_login_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/personal_head_image_layout"
                android:background="@null">

                <TextView
                    android:id="@+id/personal_head_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:text="@string/personal_login"
                    android:textColor="@color/white"
                    android:textSize="17.0sp" />

                <ImageView
                    android:id="@+id/personal_userinfo_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20.0dip"
                    android:background="@drawable/personal_userinfo_go"
                    android:gravity="center" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/horizontalgap"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_below="@id/personal_head_layout"
            android:background="#32ffffff" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/horizontalgap"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/personal_public_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/personal_plat_selector"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/personal_public_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/personal_public" />

                <TextView
                    android:id="@+id/personal_public_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/personal_public_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3.0dip"
                    android:text="@string/personal_my_publish"
                    android:textColor="#ffffffff"
                    android:textSize="11.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/personal_collect_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1.0"
                android:background="@drawable/personal_plat_selector"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@id/personal_collect_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/personal_collect" />

                <TextView
                    android:id="@id/personal_collect_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/personal_collect_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3.0dip"
                    android:text="@string/personal_my_collect"
                    android:textColor="#ffffffff"
                    android:textSize="11.0sp" />
            </LinearLayout>

            <FrameLayout
                android:id="@id/personal_im_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/personal_plat_selector"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@id/personal_im_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/personal_im" />

                    <TextView
                        android:id="@id/personal_im_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/personal_im_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3.0dip"
                        android:text="@string/personal_my_im"
                        android:textColor="@android:color/white"
                        android:textSize="11.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="35.0dip"
                    android:layout_height="23.0dip"
                    android:layout_gravity="center|right|top"
                    android:gravity="bottom">

                    <TextView
                        android:id="@id/personal_im_counts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="11.0sp" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@id/personal_history_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/personal_plat_selector"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@id/personal_history_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/personal_history" />

                <TextView
                    android:id="@id/personal_history_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/personal_history_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3.0dip"
                    android:text="@string/personal_my_browse"
                    android:textColor="#ffffffff"
                    android:textSize="11.0sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@id/personal_message_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:divider="@null"
        android:dividerHeight="0.0px"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />
</LinearLayout>